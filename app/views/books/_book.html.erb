  <h2 class="mt-3">New book</h2>
  <%= form_with model:book, local:true do |f| %>
  <div class="form-group">
    <label for="book_title">Title</label>
    <%= f.text_field :title, class: 'form-control', autofocus: true, id:"book_title" %>
  </div>
  <div class="form-group">
    <label for="book_opinion">Opinon</label>
    <%= f.text_area :body, class: 'form-control', autofocus: true, id:"book_opinion" %>
  </div>
  <div class="form-group">
    <%= f.submit "Create Book", class: 'btn btn-success' %>
  </div>
  <% end %>